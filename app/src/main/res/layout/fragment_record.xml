<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.record.RecordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_record_exercise"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginEnd="10dp"
            android:background="@color/light_green_1"
            android:text="식단"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_record_food"
            app:layout_constraintVertical_bias="0.3"
            android:layout_marginStart="10dp"
            android:background="@color/yellow"
            android:text="운동"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_blood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_record_food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_record_medi"
            android:layout_marginEnd="10dp"
            android:background="@color/pink"
            android:text="혈당"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_medi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_record_exercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_record_blood"
            android:layout_marginStart="10dp"
            android:background="@color/skyblue"
            android:text="약물"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_watchDr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_record_blood"
            app:layout_constraintBottom_toTopOf="@id/btn_record_gotomail"
            android:layout_marginTop="50dp"
            android:background="#ffd3ae"
            android:text="의사에게 보여주기"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record_gotomail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_record_watchDr"
            android:background="#ffd3ae"
            android:layout_marginTop="10dp"
            android:text="내 이메일로 보내기"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>